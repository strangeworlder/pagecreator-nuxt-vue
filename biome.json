{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["**/.nuxt/**", "**/.output/**", "**/node_modules/**", "**/dist/**", "**/coverage/**"]
  },
  "overrides": [
    {
      "include": ["**/*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useBlockStatements": "off"
          }
        }
      }
    }
  ]
}
